/* components/nav/index.wxss */
.ftd-nav{
  width: 750rpx;
  height: 90rpx;
  background: #FFFFFF;
  box-shadow: 0 4px 4px 0 rgba(227,227,227,0.50);
  position: absolute;
  top: 0;
  left: 0;
}
.ftd-nav__logo{
  position: absolute;
  top: 12rpx;
  left: 45rpx;
  width: 47rpx;
  height: 58rpx;
} 
.ftd-nav__img{
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.ftd-nav__write{
  position: absolute;
  width: 136rpx;
  padding-right: 24rpx;
  height: 50rpx;
  top: 20rpx;
  right: 114rpx;
  font-size: 28rpx;
  text-align: right;
  color:#FFFFFF;
  line-height: 50rpx;
  background: #D73316;
  background-size: 23rpx 22rpx;
  border-radius: 70rpx;
}
.ftd-nav__sub{
  position: absolute;
  width: 105rpx;
  height: 40rpx;
  top: 24rpx;
  right: 110rpx;
  font-size: 10px;
  text-align: center;
  color:#FFFFFF;
  line-height: 40rpx;
  padding-right: 6rpx;
  background: #D73316;
  background-size: 23rpx 22rpx;
}
.ftd-nav__write image{
  position: absolute;
  left: 18rpx;
  top: 12rpx;
  width: 28rpx;
  height: 26rpx;
}
.ftd-nav__icon{
  position: absolute;
  top: 15rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.ftd-nav__panel{
  position: absolute;
  top: 82rpx;
  right: 13rpx;
  padding: 15rpx 42rpx;
  background: #FFFFFF;
  border: 1px solid #F0F0F0;
  box-shadow: 0 4px 8px 0 rgba(221,221,221,0.50);
  z-index: 99999;
}
