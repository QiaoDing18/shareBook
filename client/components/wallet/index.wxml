<!--components/purchase/index.wxml-->
<view class="ftd-wallet">
  <view class="ftd-wallet_left">
    <view class="ftd-wallet_title">{{ type == 1? '被订阅' : '订阅' }}</view>
    <view class="ftd-wallet_status">已支付</view>
  </view>
  <view class="ftd-wallet_right">
    <view class="ftd-wallet_amount">{{type == 1? '+' : '-'}}{{price}}</view>
    <view class="ftd-wallet_time">{{time}}</view>
  </view>
</view>
