/**index.wxss**/
.userinfo {
  display: flex;
  width: 670rpx;
  margin-bottom: 30rpx;
}

.userinfo__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 26rpx;
}

.userinfo__nickname {
  color: #24253D ;
  font-size: 34rpx;
  margin-bottom: 10rpx;
  padding-top: 10rpx;
}

.userinfo__des{
  font-size: 24rpx;
  color: rgba(36,37,61,0.50);
}

.userinfo__edit{
    flex: 1;
}

.userinfo__btn{
    float: right;
    padding: 8rpx 15rpx;
    border: 1px solid #C7C7C7;
    border-radius: 50rpx;
    font-size: 26rpx;
    color: #C7C7C7;
    margin-top: 15rpx;
}

.usermotto {
  margin-top: 200px;
}

.booklist{
  width: 630rpx;
  padding: 17rpx 22rpx 17rpx 18rpx;
  font-size: 34rpx;
  color: #24253D;
  background: #F5F5F5;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}