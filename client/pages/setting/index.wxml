<view class="my-setting">
    <ftdNav></ftdNav> 
    <view class="setting-inp">
        <text class="label">用户名</text>
        <view class="inp-text"><input name="title" placeholder="请输入用户名" 
        bindinput="userInp" value='{{userInp}}' placeholder-class="search-placeholder"/></view>
    </view>
    <!-- <view class="setting-inp">
        <text class="label">我的图像</text>
        <view class="inp-text"><input name="title" placeholder="请上传图像" 
        bindinput="myAvatar"/></view>
    </view> -->
    <view class="setting-inp">
        <text class="label">你来在哪里</text>
        <view class="inp-text"><input name="title" placeholder="例：陕西西安" 
        bindinput="collegesInp" value='{{collegesInp}}' placeholder-class="search-placeholder"/></view>
    </view>
    <view class="setting-inp">
        <text class="label">什么专业呢</text>
        <view class="inp-text"><input name="title" placeholder="例：西邮网络工程" 
        bindinput="graduateInp" value='{{graduateInp}}' placeholder-class="search-placeholder"/></view>
    </view>
    <view class="setting-inp">
        <text class="label">职业经历</text>
        <view class="inp-text"><input name="title" placeholder="例：美团·web前端" 
        bindinput="introInp" value='{{introInp}}' placeholder-class="search-placeholder"/></view>
    </view>
    <view class="setting-inp">
        <text class="label">微信号</text>
        <view class="inp-text"><input name="title" placeholder="请输入微信号" 
        bindinput="weiChatInp" value='{{weiChatInp}}' placeholder-class="search-placeholder"/></view>
    </view>
    <view class="setting-inp">
        <text class="label">手机号</text>
        <view class="inp-text"><input name="title" placeholder="请输入手机号" 
        bindinput="mobileInp" value='{{mobileInp}}' placeholder-class="search-placeholder"/></view>
    </view>
    <view class="setting-login">
        <button class="login-btn" bindtap="loginBtnClick">提交</button>
    </view>
    <ftdTip>
    </ftdTip>
</view>
